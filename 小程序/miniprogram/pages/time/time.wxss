page {
  width: 100%;
  height: 100%;
}

.wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.context {
  flex: 1;
}

.context>.header {
  line-height: 100rpx;
  text-align: center;
}

.context>.time {
  font-size: 44rpx;
  text-align: center;
}

.context>.btns {
  width: 100%;
  height: 100rpx;
  padding: 0 15%;
  display: flex;
  justify-content: space-around;
  box-sizing: border-box;
  margin: 30rpx 0;
}

.context>.btns>.butt {
  border: 1rpx solid #ccc;
  padding: 0 20rpx;
  border-radius: 10rpx;
  line-height: 100rpx;
}

.footer {
  width: 100%;
  height: 110rpx;
  background: #e3e3e3;
  border-top: 1rpx solid;
  display: flex;
}

.footer>.icon {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.footer>.icon>.iconfont {
  font-size: 40rpx;
  color: #666;
}

.footer>.icon>.txt {
  font-size: 30rpx;
  margin-top: 3rpx;
}
