.wrap {
  width: 100%;
  height: 100%;
  padding: 0  20rpx;
}
.header{
  color: #ccc;
  line-height: 80rpx;
  display: block;
  padding-left: 150rpx;
  font-size: 40rpx;
}
.title{
  width: 100%;
  line-height:100rpx;
  display: block;
  font-size: 50rpx;
  padding: 0 5%;
}
.from{
  width: 95%;
  box-sizing: border-box;
}
.from>.from_title{
  width: 100%;
  line-height: 100rpx;
  display: block;
  border-bottom: 1rpx solid #ccc;
  text-align: center;
}
.from>.time{
  width: 100%;
  line-height: 100rpx;
  display: flex;
  border-bottom: 1rpx solid #ccc;
  padding-left: 10rpx;
}
.from>.time>picker{
  padding-left: 10rpx;
}
.from>.time>picker>text{
  padding-left: 40rpx;
}
.submit{
  margin-top: 30rpx;
  width: 100%;
  background: #179b16;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
}
.submits{
  margin-top: 30rpx;
  width: 100%;
  background: #9eda9e;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
}